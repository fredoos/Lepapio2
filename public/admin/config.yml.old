backend:
  name: git-gateway
  branch: main

media_folder: "public/uploads"
public_folder: "/uploads"

# Configuration pour Le Papio
site_url: https://lepapio.fr
display_url: https://lepapio.fr

collections:
  # GESTION DES ACTUALIT√âS
  - name: "actualites"
    label: "üì∞ Actualit√©s"
    folder: "src/content/news"
    create: true
    slug: "{{year}}-{{month}}-{{day}}-{{slug}}"
    fields:
      - {label: "Titre", name: "title", widget: "string"}
      - {label: "Date", name: "date", widget: "datetime", default: "{{now}}"}
      - {label: "Image principale", name: "image", widget: "image", required: false}
      - {label: "R√©sum√© court", name: "excerpt", widget: "text", hint: "Description courte pour l'aper√ßu"}
      - {label: "Contenu", name: "body", widget: "markdown"}
      - {label: "Publi√©", name: "published", widget: "boolean", default: true}

  # GESTION DU MENU - ENTR√âES
  - name: "menu-entrees"
    label: "ü•ó Menu - Entr√©es"
    folder: "src/content/menu/entrees"
    create: true
    slug: "{{slug}}"
    fields:
      - {label: "Nom du plat", name: "name", widget: "string"}
      - {label: "Nom en anglais", name: "nameEn", widget: "string", required: false}
      - {label: "Prix", name: "price", widget: "string", pattern: ["^[0-9]+,[0-9]{2}$", "Format: 12,50"]}
      - {label: "Description", name: "description", widget: "text"}
      - {label: "Description en anglais", name: "descriptionEn", widget: "text", required: false}
      - {label: "Photo du plat", name: "image", widget: "image", required: false, media_folder: "/uploads"}
      - {label: "Ordre d'affichage", name: "order", widget: "number", default: 1}
      - {label: "Disponible", name: "available", widget: "boolean", default: true}

